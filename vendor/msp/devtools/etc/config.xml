<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/config.xsd">
    <default>
        <dev>
            <msp_devtools>
                <enabled>1</enabled> <!-- Enable MSP DevTools -->
                <toolbar_enable>1</toolbar_enable> <!-- Enable the toolbar -->
                <ip_whitelist>127.0.0.1</ip_whitelist> <!-- IP Whitelisting -->
                <toolbar_hide>0</toolbar_hide> <!-- Show or hide toolbar -->
            </msp_devtools>
        </dev>
    </default>
</config>
